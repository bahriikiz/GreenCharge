@model GreenCharge.Models.Reservation

@{
    ViewData["Title"] = "Rezervasyon Oluştur";
}

<div class="container mt-5">
    <div class="card shadow border-success">
        <div class="card-header bg-success text-white">
            <h4>⚡ @ViewBag.StationName İstasyonu İçin Rezervasyon</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <strong>Bilgi:</strong> Bu istasyonun saatlik ücreti: <strong>@ViewBag.Price ₺</strong>
            </div>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="StationId" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Tarih ve Saat</label>
                        <input asp-for="ReservationDate"
                               class="form-control"
                               type="datetime-local"
                               asp-format="{0:yyyy-MM-ddTHH:mm}"
                               step="60"
                               required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Şarj Süresi (Dakika)</label>
                        <input asp-for="DurationMinutes" type="number" min="10" max="1440" class="form-control" value="60" required />
                        <small class="text-muted">Örn: 30, 45, 60, 90 dakika...</small>
                    </div>
                </div>

                <button type="submit" class="btn btn-success w-100 btn-lg">
                    <i class="fa fa-check-circle"></i> Rezervasyonu Onayla
                </button>
            </form>
        </div>
    </div>
</div>