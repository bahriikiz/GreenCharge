@model IEnumerable<GreenCharge.Models.Reservation>

@{
    ViewData["Title"] = "Tüm Rezervasyon Yönetimi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-danger"><i class="fa fa-tasks"></i> Rezervasyon Yönetimi</h2>
        <span class="badge bg-secondary">Toplam: @Model.Count() Kayıt</span>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <table class="table table-hover table-striped align-middle">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Müşteri</th>
                        <th>İstasyon</th>
                        <th>Tarih</th>
                        <th>Süre</th>
                        <th>Tutar</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <i class="fa fa-user text-muted"></i> <strong>@item.User.FullName</strong><br />
                                <small class="text-muted">@item.User.Email</small>
                            </td>
                            <td>
                                <strong>@item.Station.Name</strong><br />
                                <small>@item.Station.City</small>
                            </td>
                            <td>@item.ReservationDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@item.DurationMinutes dk</td>
                            <td class="text-success fw-bold">@item.TotalPrice.ToString("N2") ₺</td>
                            <td>
                                <form asp-action="AdminCancel" method="post" onsubmit="return confirm('Bu rezervasyonu silmek istediğinize emin misiniz?');">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fa fa-times"></i> İptal Et
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center mt-3">Sistemde henüz hiç rezervasyon yok.</div>
            }
        </div>
    </div>
</div>