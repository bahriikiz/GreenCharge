@model GreenCharge.Models.Station

@{
    ViewData["Title"] = "Yeni İstasyon";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4>Yeni İstasyon Kaydı</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>
                       
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">İstasyon Adı</label>
                                <input asp-for="Name" class="form-control" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Şehir</label>
                                <input asp-for="City" class="form-control" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Açık Adres</label>
                            <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">Şarj Tipi</label>
                                <select asp-for="ChargeType" class="form-select">
                                    <option value="AC - Standart">AC - Standart</option>
                                    <option value="DC - Hızlı Şarj">DC - Hızlı Şarj</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Saatlik Ücret (₺)</label>
                                <input asp-for="PricePerHour" class="form-control" type="number" step="0.01" lang="en-US" />
                            </div>
                            <div class="col-md-4 d-flex align-items-center mt-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="IsActive" checked>
                                    <label class="form-check-label">İstasyon Aktif</label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Harita Konumu (Google Maps Embed Kodu)</label>
                                <textarea asp-for="LocationCode" class="form-control" rows="3" placeholder='<iframe src="https://www.google.com/maps/embed...'></textarea>
                                <small class="text-muted">
                                    <strong>Nasıl Alınır?</strong> Google Maps'te konumu bul -> Paylaş -> Harita Yerleştir -> HTML'i Kopyala -> Buraya Yapıştır.
                                </small>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>