@model IEnumerable<GreenCharge.Models.Station>

@{
    ViewData["Title"] = "İstasyon Listesi";
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">🔌 Şarj İstasyonları</h2>

        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="fa fa-plus"></i> Yeni İstasyon Ekle
            </a>
        }
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>İstasyon Adı</th>
                        <th>Şehir / Adres</th>
                        <th>Tip</th>
                        <th>Saatlik Ücret</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none fw-bold text-success">
                                    @item.Name <i class="fa fa-info-circle small"></i>
                                </a>
                            </td>
                            <td>@item.City <br /> <small class="text-muted">@item.Address</small></td>
                            <td><span class="badge bg-info text-dark">@item.ChargeType</span></td>
                            <td>@item.PricePerHour ₺</td>
                            <td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="ToggleStatus" asp-route-id="@item.Id"
                               class="badge text-decoration-none @(item.IsActive ? "bg-success" : "bg-danger")">
                                        @(item.IsActive ? "Aktif" : "Pasif") <i class="fa fa-sync-alt ms-1"></i>
                                    </a>
                                }
                                else
                                {
                                    <span class="badge @(item.IsActive ? "bg-success" : "bg-danger")">
                                        @(item.IsActive ? "Aktif" : "Pasif")
                                    </span>
                                }
                            </td>
                        
                            <td>
                                @if (item.IsActive)
                                {
                                    <a asp-controller="Reservation" asp-action="Create" asp-route-stationId="@item.Id" class="btn btn-sm btn-outline-primary mb-1">
                                        <i class="fa fa-calendar-check"></i> Rezervasyon Yap
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-secondary mb-1" disabled>
                                        <i class="fa fa-ban"></i> Hizmet Dışı
                                    </button>
                                }
                               
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning ms-1 text-dark">
                                        <i class="fa fa-edit"></i> Düzenle
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1">
                                        <i class="fa fa-trash"></i> Sil
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>